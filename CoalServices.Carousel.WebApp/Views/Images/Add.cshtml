@model CoalServices.Carousel.Models.ImageAddModel

@{
    ViewData["Title"] = "Add Image";
}

<div class="container text-center">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 col-xxl-12">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 col-xxl-12 text-center">
                    <h1 cla>Add Image</h1>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 col-xxl-12">
                    @using (Html.BeginForm("Add", "Images", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken();
                        <hr />

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group custom-file mb-3">
                            <input type="file" name="Image" required accept="image/png, image/jpeg" />
                        </div>
                        @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })

                        <div class="form-group mt-3">
                            <input type="submit" value="Add" class="btn btn-primary" />
                        </div>
                    }
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>
    </div>
</div>