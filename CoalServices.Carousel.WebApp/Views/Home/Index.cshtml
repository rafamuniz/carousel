
@model List<CoalServices.Carousel.Models.ImageInfoModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 col-xxl-12">
            <div id="carousel" class="carousel slide carousel-fade" data-ride="carousel">
                <!--Indicators-->
                <ol class="carousel-indicators">
                    @for (var i = 0; i < Model.Count; i++)
                    {
                        <li data-target="#carousel" data-slide-to="@i" class="@(i == 0? "active": "")"></li>
                    }
                </ol>
                <!--/.Indicators-->
                <!--Slides-->
                <div class="carousel-inner" role="listbox">

                    @for (var i = 0; i < Model.Count; i++)
                    {
                        <div class="carousel-item @(i == 0? "active": "")">
                            <div class="view">
                                <img class="d-block w-100" src="@Model[i].ContentBase64"
                                     alt="@Model[i].FileName">
                                <div class="mask rgba-black-light"></div>
                            </div>
                            @*<div class="carousel-caption">
                                    <h3 class="h3-responsive">@Model[i].FileName</h3>
                                    <p>@Model[i].FileSize</p>
                                </div>*@
                        </div>
                    }
                </div>
                <!--/.Slides-->
                <!--Controls-->
                <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
                <!--/.Controls-->
            </div>
        </div>
    </div>
</div>